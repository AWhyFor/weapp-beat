page {
  background: #f8f8f8;
  font-family: Menlo,Monaco,Andale Mono,lucida console,Courier New,monospace;
}
.ctn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}

.cells {
  margin-top: 20px;
  line-height: 1.41176471;
  font-size: 17px;
  overflow: hidden;
  position: relative;
}

.cell {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
  background: #ffffff;
}
.cell-s {
  display: block;
  padding: 10px 0;
  width: 100%;
}

.cell__bd {
  flex: 1;
}

.cell__ft {
  text-align: right;
  color: #999999;
}

.cell-slider {
  margin: 0 15px;
}
.radio-group {
  margin: 0 15px;
  display: flex;
  flex-wrap: wrap;
}
.radio-group .radio {
  width: 33.333%;
  margin: 5px 0;
}