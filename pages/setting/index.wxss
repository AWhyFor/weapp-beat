page {
  background: #f8f8f8;
  font-family: Menlo,Monaco,Andale Mono,lucida console,Courier New,monospace;
}
.ctn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}

.cell {
  background: #ffffff;
  display: block;
  margin-top: 20px;
  padding: 20px; 
}
.cell:last-child {
  margin-bottom: 20px;
}

.cell-slider {
  margin: 0;
}
.radio-group {
  display: flex;
  flex-wrap: wrap;
  font-size: 14px;
}
.radio-group .radio {
  width: 33.333%;
  margin: 5px 0;
}
.radio-group div {
  display: block;
  width: 100%;
}

.page__hd {
  display:block;
  margin-bottom: 20px;
}

.page__hd p {
  display: block;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
    display: block;
    height: 32px;
    line-height: 32px;
}
.page__title span{
    text-align: right;
    font-size: 14px;
    color: #888;
    float: right;
}
.page__desc {
    margin: 10px 0 5px;
    display: block;
    color: #888;
    text-align: left;
    font-size: 14px;
}

.radio-group wx-div.radio-wrap {
  display:flex;
  flex-wrap:wrap;
}